@model SALClassLib.Masterdata.Model.Cliente

@{
    ViewBag.Title = "Edição de Cliente";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row header">
    <h2>@ViewBag.Title</h2>
</div>

@using (Html.BeginForm("EditPF", "Cliente", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" })){
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="span5 offset3">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.PessoaFisica.Id)
            @Html.HiddenFor(model => model.PessoaFisica.Usuario)
            @Html.HiddenFor(model => model.PessoaFisica.Senha)

            <div class="control-group">
                @Html.LabelFor(model => model.PessoaFisica.Nome,  new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.PessoaFisica.Nome)<br />
                    @Html.ValidationMessageFor(model => model.PessoaFisica.Nome)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.PessoaFisica.Sobrenome,  new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.PessoaFisica.Sobrenome)<br />
                    @Html.ValidationMessageFor(model => model.PessoaFisica.Sobrenome)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.PessoaFisica.Cpf,  new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.PessoaFisica.Cpf)<br />
                    @Html.ValidationMessageFor(model => model.PessoaFisica.Cpf)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.PessoaFisica.Rg,  new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.PessoaFisica.Rg)<br />
                    @Html.ValidationMessageFor(model => model.PessoaFisica.Rg)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.PessoaFisica.TelefoneFixo,  new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.PessoaFisica.TelefoneFixo)<br />
                    @Html.ValidationMessageFor(model => model.PessoaFisica.TelefoneFixo)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.PessoaFisica.TelefoneCelular,  new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.PessoaFisica.TelefoneCelular)<br />
                    @Html.ValidationMessageFor(model => model.PessoaFisica.TelefoneCelular)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.PessoaFisica.Email,  new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.PessoaFisica.Email)<br />
                    @Html.ValidationMessageFor(model => model.PessoaFisica.Email)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <p class="actions">
            <input class="btn btn-danger" type="submit" value="Salvar" />
            <a class="btn" href="@Url.Action("Index", "Cliente")">Cancelar</a>
        </p>  
    </div>
}
