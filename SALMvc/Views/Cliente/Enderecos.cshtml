@model IEnumerable<SALClassLib.Masterdata.Model.Endereco>

@{
    ViewBag.Title = "Endereço";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row header">
    <h2>@ViewBag.Title</h2>
</div>

<p>
    @Html.ActionLink("Create New", "CreateEndereco")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Logradouro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bairro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Logradouro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bairro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditEndereco", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteEndereco", new { id=item.Id })
        </td>
    </tr>
}

</table>
