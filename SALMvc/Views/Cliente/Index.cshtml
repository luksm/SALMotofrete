@model IEnumerable<SALClassLib.Masterdata.Model.Cliente>

@{
    ViewBag.Title = "Listagem de Clientes";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row" style="border-bottom: 1px solid black; margin-bottom: 20px">
    <div class="span12">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="row" style="margin-bottom: 20px">
    <div class="span12">
        <a href="@Url.Action("CreatePF", "Cliente")" class="btn btn-danger" type="button"><i class="icon-user icon-white"> </i>  Novo Cliente</a>
        <a style="margin-right:10px;" href="@Url.Action("CreatePJ", "Cliente")" class="btn btn-danger" type="button"><i class="icon-briefcase icon-white"> </i>  Nova Empresa</a>
    </div>
</div>
<div class="row">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>CPF</th>
                <th>RG</th>
                <th></th>
            </tr>
        </thead>
        <tbody> 
            @foreach (var item in Model) {
                <tr>
                    <td>@(item.Pessoa is SALClassLib.Masterdata.Model.PessoaFisica ? item.PessoaFisica.Nome : item.PessoaJuridica.NomeFantasia)</td>
                    <td>@(item.Pessoa is SALClassLib.Masterdata.Model.PessoaFisica ? item.PessoaFisica.Sobrenome : item.PessoaJuridica.RazaoSocial)</td>
                    <td>@(item.Pessoa is SALClassLib.Masterdata.Model.PessoaFisica ? item.PessoaFisica.Cpf : item.PessoaJuridica.Cnpj)</td>
                    <td>@(item.Pessoa is SALClassLib.Masterdata.Model.PessoaFisica ? item.PessoaFisica.Rg: item.PessoaJuridica.InscricaoEstadual)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Cliente", new { id=item.Id })" class="btn btn-small btn-info"><i class="icon-pencil icon-white"> </i>  Editar</a>
                        <a href="@Url.Action("Details", "Cliente", new { id=item.Id })" class="btn btn-small btn-info"><i class="icon-info-sign icon-white"> </i>  Detalhes</a>
                        <a href="@Url.Action("Delete", "Cliente", new { id=item.Id })" class="btn btn-small btn-info"><i class="icon-remove-circle icon-white"> </i>  Excluir</a>
                    </td>
                </tr>
            }
        <tbody> 
    </table>
</div>