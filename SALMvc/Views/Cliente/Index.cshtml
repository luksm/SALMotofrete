@model IEnumerable<SALClassLib.Masterdata.Model.Cliente>

@{
    ViewBag.Title = "Listagem de Clientes";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row" style="border-bottom: 1px solid black;">
    <h2>
        Entregadores
        <a href="@Url.Action("Create", "Cliente")" class="btn btn-primary pull-right" type="button"><i class="icon-user icon-white"> </i>  Novo Cliente</a>
    </h2>
</div>

<p>
    @Html.ActionLink("Nova Pessoa Fisica", "CreatePF")
</p>
<p>
    @Html.ActionLink("Nova Pessoa Juridica", "CreatePF")
</p>
    <table class="table table-hover table-striped">
    <tr>
        <th>Nome</th>
        <th>Sobrenome</th>
        <th>CPF</th>
        <th>RG</th>
        <th>Email</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
