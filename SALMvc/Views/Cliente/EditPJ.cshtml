@model SALClassLib.Masterdata.Model.Cliente

@{
    ViewBag.Title = "Edição de Empresa";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row header">
    <h2>@ViewBag.Title</h2>
</div>

@using (Html.BeginForm("EditPJ", "Cliente", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" })){
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="span5 offset3">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.PessoaJuridica.Id)
            @Html.HiddenFor(model => model.PessoaJuridica.Usuario)
            @Html.HiddenFor(model => model.PessoaJuridica.Senha)

            @Html.Partial("~/Views/Cliente/_InputPJPartial.cshtml")
        </div>
    </div>
    <div class="row">
        <p class="actions">
            <input class="btn btn-danger" type="submit" value="Salvar" />
            <a class="btn" href="@Url.Action("Index", "Cliente")">Cancelar</a>
        </p>  
    </div>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval");
    @Scripts.Render("~/bundles/jquery.maskedinput")
    <script type="text/javascript">
        $(function () {
            $('#PessoaJuridica_Cnpj').mask('99.999.999/9999-99');
        });
    </script>
}