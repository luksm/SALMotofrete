@model SALClassLib.Masterdata.Model.AparelhoMovel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row header">
    <h2>Exclusão de Aparelho Móvel</h2>
</div>

<div class="row">
    <h3>Tem certeza que deseja excluir este aparelho móvel ?</h3>
</div>

<div class="row">
    <div class="span4 offset4">

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Tipo.Descricao)
            <strong>
                @Html.DisplayFor(model => model.Tipo.Descricao)
            </strong>
        </div>

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Modelo)
            <strong>
                @Html.DisplayFor(model => model.Modelo)
            </strong>
        </div>

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Marca)
            <strong>
                @Html.DisplayFor(model => model.Marca)
            </strong>
        </div>

        <div class="control-group">
            @Html.DisplayNameFor(model => model.NumeroTelefone)
            <strong>
                @Html.DisplayFor(model => model.NumeroTelefone)
            </strong>
        </div>

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Observacao)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Observacao)
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p>
                <input type="submit" class="btn btn-danger" value="Excluir" />
                |
                @Html.ActionLink("Back to List", "Index")
            </p>
        }
    </div>
</div>
