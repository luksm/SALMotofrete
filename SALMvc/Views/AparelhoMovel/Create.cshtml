@model SALClassLib.Masterdata.Model.AparelhoMovel

@{
    ViewBag.Title = "Cadastro de Aparelho Móvel";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row header">
    <h2>@ViewBag.Title</h2>
</div>

@using (Html.BeginForm("Create", "AparelhoMovel", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="span5">
 
            <div class="control-group">
                @Html.LabelFor(model => model.Tipo, new { @class = "control-label" })
                <div class="controls">
                    @Html.DropDownListFor(model => model.Tipo.Id, (IEnumerable<SelectListItem>)ViewBag.TipoAparelhoMovel)<br />
                    @Html.ValidationMessageFor(model => model.Tipo)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.Modelo, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.Modelo)<br />
                    @Html.ValidationMessageFor(model => model.Modelo)
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.Marca, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.Marca)<br />
                    @Html.ValidationMessageFor(model => model.Marca)
                </div>
            </div>
       </div>
       <div class="span5">
            <div class="control-group">
                @Html.LabelFor(model => model.NumeroTelefone, new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(model => model.NumeroTelefone)<br />
                    @Html.ValidationMessageFor(model => model.NumeroTelefone)
                </div>
            </div>
    
            <div class="control-group">
                @Html.LabelFor(model => model.Observacao, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextAreaFor(model => model.Observacao)<br />
                    @Html.ValidationMessageFor(model => model.Observacao)
                </div>
            </div>
       </div>
    </div>
    <div class="row">
        <p class="actions">
            <input class="btn btn-danger" type="submit" value="Cadastrar" />
            <input class="btn" type="reset" value="Limpar" />
            <a class="btn" href="@Url.Action("Index", "AparelhoMovel")">Cancelar</a>
        </p>
    </div>
}
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval");
    @Scripts.Render("~/bundles/jquery.maskedinput")
    <script type="text/javascript">
        $(function () {
            $('input#NumeroTelefone').mask('(99) 9999-9999?9').focusout(function () {
                var phone, element;
                element = $(this);
                element.unmask();
                phone = element.val().replace(/\D/g, '');
                if (phone.length > 10) {
                    element.mask("(99) 99999-999?9");
                } else {
                    element.mask("(99) 9999-9999?9");
                }
            });
        });
    </script>
}