@model IEnumerable<SALClassLib.Masterdata.Model.AparelhoMovel>

@{
    ViewBag.Title = "Listagem de Aparelhos Móveis";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row" style="border-bottom: 1px solid black;">
    <h2>
        Entregadores
        <a href="@Url.Action("Create", "AparelhoMovel")" class="btn btn-primary pull-right" type="button"><i class="icon-plus icon-white"> </i>  Novo Aparelho Movel</a>
    </h2>
</div>

<div class="row">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Modelo)</th>
                <th>@Html.DisplayNameFor(model => model.Marca)</th>
                <th>@Html.DisplayNameFor(model => model.NumeroTelefone)</th>
                <th>@Html.DisplayNameFor(model => model.Observacao)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
                <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                <td>@Html.DisplayFor(modelItem => item.NumeroTelefone)</td>
                <td>@Html.DisplayFor(modelItem => item.Observacao)</td>
                <td>
                    <a href="@Url.Action("Edit", "AparelhoMovel", new { id=item.Id })" class="btn btn-small btn-info"><i class="icon-pencil icon-white"> </i>  Editar</a>
                    <a href="@Url.Action("Details", "AparelhoMovel", new { id=item.Id })" class="btn btn-small btn-info"><i class="icon-info-sign icon-white"> </i>  Detalhes</a>
                    <a href="@Url.Action("Delete", "AparelhoMovel", new { id=item.Id })" class="btn btn-small btn-info"><i class="icon-remove-circle icon-white"> </i>  Excluir</a>
                </td>
            </tr>
}
        </tbody>
    </table>
</div>