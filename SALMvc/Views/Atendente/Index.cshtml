@model IEnumerable<SALClassLib.Masterdata.Model.Atendente>

@{
    ViewBag.Title = "Listagem de Atendentes";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row" style="border-bottom: 1px solid black;">
    <h2>
        Atendente
        <a href="@Url.Action("Create", "Atendente")" class="btn btn-primary pull-right" type="button"><i class="icon-user icon-white"> </i>  Novo Atendente</a>
    </h2>
</div>

<div class="row">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Sobrenome)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th class="actions">Ações</th>
            </tr>
        </thead>    
        <tbody>    
@foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Sobrenome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td class="actions">
                    <a href="@Url.Action("Edit", "Atendente", new { id=item.Id })" class="btn btn-small btn-info"><i class="icon-pencil icon-white"> </i>  Editar</a>
                    <a href="@Url.Action("Details", "Atendente", new { id=item.Id })" class="btn btn-small btn-info"><i class="icon-info-sign icon-white"> </i>  Detalhes</a>
                    <a href="@Url.Action("Delete", "Atendente", new { id=item.Id })" class="btn btn-small btn-info"><i class="icon-remove-circle icon-white"> </i>  Excluir</a>
                </td>
            </tr>
}
        </tbody>
    </table>
</div>
