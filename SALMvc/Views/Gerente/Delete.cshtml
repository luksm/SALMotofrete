@model SALClassLib.Masterdata.Model.Gerente

@{
    ViewBag.Title = "Exclusão de Gerente";
    Layout = "~/Views/Shared/_Utopia.cshtml";
    Html.RenderPartial("~/Views/Shared/_FlashPartial.cshtml");
}

<div class="row header">
    <h2>@ViewBag.Title</h2>
</div>

<div class="row">
    <div class="span6 offset4">
        <h4>Tem certeza de que deseja excluir este gerente?</h4>

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Nome)
            <strong>
                @Html.DisplayFor(model => model.Nome)
            </strong>
        </div>

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Sobrenome)
            <strong>
                @Html.DisplayFor(model => model.Sobrenome)
            </strong>
        </div>   

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Cpf)
            <strong>
                @Html.DisplayFor(model => model.Cpf)
            </strong>
        </div>

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Rg)
            <strong>
                @Html.DisplayFor(model => model.Rg)
            </strong>
        </div>

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Email)
            <strong>
                @Html.DisplayFor(model => model.Email)
            </strong>
        </div>    

        <div class="control-group">
            @Html.DisplayNameFor(model => model.TelefoneFixo)
            <strong>
                @Html.DisplayFor(model => model.TelefoneFixo)
            </strong>
        </div> 
        
        <div class="control-group">
            @Html.DisplayNameFor(model => model.TelefoneCelular)
            <strong>
                @Html.DisplayFor(model => model.TelefoneCelular)
            </strong>
        </div> 
        
        <div class="control-group">
            @Html.DisplayNameFor(model => model.Usuario)
            <strong>
                @Html.DisplayFor(model => model.Usuario)
            </strong>
        </div>          

        <div class="control-group">
            @Html.DisplayNameFor(model => model.Foto)
            <strong>
                @Html.DisplayFor(model => model.Foto)
            </strong>
        </div>
        
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            <p class="actions">
                <input type="submit" value="Deletar" class="btn btn-danger" />
                @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn" })
            </p>
        }
    </div>
</div>
