<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="SALClassLib.Masterdata.Model" assembly="SALClassLib">
  <class name="Login" table="TB_LOGIN">
    <id name="Id">
      <column name="ID_LOGIN" not-null="true"/>
      <generator class="increment" />
    </id>
    <property name="Usuario" column="USUARIO" not-null="true" />
    <property name="Senha" column="SENHA" not-null="true" />
    <set name="Permissoes" table="TB_LOGIN_PERMISSAO" cascade="none">
      <key column="ID_LOGIN" />
      <many-to-many class="PermissaoAcesso" column ="ID_PERMISSAO_ACESSO" />
    </set>
  </class>
</hibernate-mapping>